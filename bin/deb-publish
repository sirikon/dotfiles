#!/usr/bin/env bash
set -euo pipefail

function main {
    package="$1"

    printf "%s\n" "Publishing:"
    printf "%s\n" " package: ${package}"
    printf "%s\n" ""

    curl \
        -F secret="${APT_UPLOAD_SECRET}" \
        -F package="@${package}" \
        -F packageName="$(basename "${package}")" \
        https://apt.srk.bz/upload
}

main "$@"
