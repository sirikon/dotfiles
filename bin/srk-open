#!/usr/bin/env abs

urlBuilders = {
    "maven-artifact": f(input) {
        return "https://mvnrepository.com/artifact/" + input.replace(":", "/")
    },
    "jira-task": f(input) {
        return "https://" + env("JIRA_WORKSPACE") + ".atlassian.net/browse/" + input
    }
}

if args().len() > 2 {
    urlBuilder = arg(2)
    url = urlBuilders[urlBuilder](`xclip -out`)
    `xdg-open "$url"`
}
